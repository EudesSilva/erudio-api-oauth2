	<named-query name="Country.findCountryByName">
		<query>
			select c from Country c where c.name = :name
		</query>
	</named-query>

	<named-query name="Country.findAllCountries">
		<query>
			select c from Country c
		</query>
	</named-query>

	<named-query name="Country.deleteCountryById">
		<query>
			delete from Country where idCountry = :idCountry
		</query>
	</named-query>

	<named-query name="Country.findCountryById">
		<query>
			select c from Country c where c.idCountry = :idCountry
		</query>
	</named-query>
	
